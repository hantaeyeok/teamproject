<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="exProduct">
	
	<!-- 총 상품 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from exproduct
	</select>
	
	<!-- 상품 목록 -->
	<select id="getExProductList" resultType="com.morning.domain.exProduct">
		select * from exproduct order by pno desc
	</select>
	
	<!-- 상품 상세 보기 -->	
	<select id="getExProduct" resultType="com.morning.domain.exProduct">
		select * from exproduct where pno=#{pno}
	</select>
	
	<!-- 상품 등록 -->
	<insert id="insExProduct" parameterType="com.morning.domain.exProduct">
		insert into exproduct values (default, #{cate}, #{pname}, #{com},
		#{price}, #{img}, #{img2}, #{img3})
	</insert>
	
	<!-- 상품 변경 -->
	<update id="upExProduct" parameterType="com.morning.domain.exProduct">
		update exproduct set pname=#{pname}, price=#{price} where pno=#{pno}
	</update>
		
	<!-- 상품 삭제 -->
	<delete id="delExProduct">
		delete from exproduct where pno=#{pno}
	</delete>
</mapper>